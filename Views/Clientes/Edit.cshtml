@model POS.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="card mt-4 shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Editar Cliente</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="NIT" class="font-weight-bold"></label>
                <input asp-for="NIT" class="form-control" placeholder="Ingrese el NIT" required />
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="font-weight-bold"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" required />
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="font-weight-bold"></label>
                <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido" required />
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="font-weight-bold"></label>
                <input asp-for="Direccion" class="form-control" placeholder="Ingrese la dirección" required />
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="font-weight-bold"></label>
                <input asp-for="Telefono" class="form-control" type="tel" id="telefono" placeholder="Ingrese el teléfono" required />
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-undo"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("telefono").addEventListener("input", function (e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
}
