@model POS.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="card mt-4 shadow-sm">
    <div class="card-header" style="background-color: #007bff; color: #ffffff;">
        <h4 class="mb-0">Editar Producto</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Codigo" class="font-weight-bold"></label>
                <input asp-for="Codigo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="font-weight-bold"></label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="font-weight-bold"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="font-weight-bold"></label>
                <input asp-for="Precio" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="font-weight-bold"></label>
                <input asp-for="Stock" class="form-control" />
            </div>
            <div class="form-group">
                <label class="font-weight-bold">Fotografía (actual)</label>
                <img src="@Model.UrlImagen" alt="Imagen del Producto" class="img-thumbnail" width="100" />
                <br />
                <label class="font-weight-bold">Subir nueva imagen (si desea cambiarla):</label>
                <input type="file" name="imagen" class="form-control" />
            </div>
            <input type="hidden" asp-for="UrlImagen" />
            <button type="submit" class="btn" style="background-color: #00bcd4; color: white; font-weight: bold;">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
