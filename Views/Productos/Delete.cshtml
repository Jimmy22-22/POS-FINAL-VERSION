@model POS.Models.Producto
@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="card mt-4 shadow-sm">
    <div class="card-header" style="background-color: #dc3545; color: #ffffff;">
        <h4 class="mb-0">Eliminar Producto</h4>
    </div>
    <div class="card-body">
        <h5>¿Está seguro de que desea eliminar este producto?</h5>
        <dl class="row mt-3">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>
            <dt class="col-sm-3">Precio</dt>
            <dd class="col-sm-9">@Model.Precio</dd>
            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.Stock</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
